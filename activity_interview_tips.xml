<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_lightbulb"
                android:tint="@color/purple_500"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interview Tips"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Before Interview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_checklist"
                        android:tint="@color/white"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Before the Interview"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Research the company thoroughly\n• Review the job description\n• Practice common interview questions\n• Prepare your own questions\n• Get your outfit ready\n• Plan your journey to the interview location"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- During Interview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_bg_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_presentation"
                        android:tint="@color/white"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="During the Interview"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Arrive 10-15 minutes early\n• Make good eye contact\n• Listen carefully to questions\n• Use the STAR method for behavioral questions\n• Show enthusiasm and positive attitude\n• Be honest and authentic"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Video Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_video"
                android:tint="@color/purple_500"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Helpful Interview Videos"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Video Links Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/link1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Top 6 Common Interview Questions (Indeed)"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/link2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• STAR Method: How to Answer Behavioral Questions"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/link3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Tell Me About Yourself (Harvard Career Services)"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/link4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Body Language Tips for Job Interview Success (Indeed)"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:drawableStart="@drawable/ic_play"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView> 